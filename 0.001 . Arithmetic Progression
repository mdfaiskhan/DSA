//sum of all
public class Main{
    public static int sum(int a,int n,int d){
        return n*(2*a+(n-1)*d)/2;
    }
    public static void main(String[] args) {
        System.out.println("Hello World");
         int a=3;
        int d=3;
        int n=10;
        System.out.println(sum(a,n,d));
    }
}
